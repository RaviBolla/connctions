<%= form_with(model: connection) do |form| %>
  <br />
  <% if connection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(connection.errors.count, "error") %> prohibited this connection from being saved:</h2>

      <ul>
        <% connection.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name, class: "form-control", placeholder: "First Name" %>
  </div>
  <br />

  <div class="field form-group">
    <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
  </div>
  <br />

  <div class="field form-group">
    <%= form.text_field :twitter, class: "form-control", placeholder: "@twitter" %>
  </div>
  <br />

  <div class="field form-group">
    <%= form.text_field :email, class: "form-control", placeholder: "example@abc.com" %>
  </div>
  <br />

  <div class="field form-group">
    <%= form.text_field :phone, class: "form-control", placeholder: "9888888888" %>
  </div>
  <br />

  <div class="actions form-group">
    <%= form.submit class: "btn btn-secondary"%>
  </div>
  <br />
<% end %>
