<div class="jumbotron">
  <h1 class="display-4"><%= @connection.first_name %> <%= @connection.last_name %></h1>
  <p class="lead">
    <%= @connection.email %> |
    <%= @connection.phone %> |
    <%= @connection.twitter %>
  </p>

  <br />

  <p class="lead">
    <% if @connection.user_id == current_user.id  %>
      <%= link_to 'Edit', edit_connection_path(@connection), class: "btn btn-secondary" %>
    <% end %>
    <%= link_to 'Back', connections_path, class: "btn btn-dark" %>
  </p>
</div>

